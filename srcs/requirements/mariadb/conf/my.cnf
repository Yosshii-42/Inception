[mysqld]
socket = /run/mysqld/mysqld.sock
bind-address = 0.0.0.0
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
skip-name-resolve

# socket
#  ヘルスチェック（mysqladmin --protocol=socket …）や、
#  localhost 接続がソケットを使うときにこのパスを見る
# bind-adress = 0.0.0.0
#  全インターフェースでTCP待受
#  Dockerではブリッジ内（例: mariadb:3306）からの接続を受けるために便利
# skip-name-resolve 
#  名前解決を無効化して接続高速化 & DNSトラブル回避